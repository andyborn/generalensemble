<h1>Listing songs</h1>

<table>
  <tr>
    <th>Title</th>
    <th>About</th>
    <th>Image</th>
    <th>Lyrics</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @songs.each do |song| %>
  <tr>
    <td><%= song.title %></td>
    <td><%= song.about %></td>
    <td><%= song.image %></td>
    <td><%= song.lyrics %></td>
    <td><%= link_to 'Show', song %></td>
    <td><%= link_to 'Edit', edit_song_path(song) %></td>
    <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

