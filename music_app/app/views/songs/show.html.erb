<p id="notice"><%= notice %></p>

<div class = "player_large">
  <%= image_tag @song.image.detail.url %><br>
  
</div>


<div class = "song_details">
  <h1>
    <%= @song.title %>
  </h1>
  <h3>
    by <%= link_to @song.user.artist_name, user_path(@song.user) %>
  </h3>
  <audio controls>
  <source src="<%= @song.song_file %>" type="audio/mpeg">
Your browser does not support the audio element.
</audio>
  <p>
    <b>About:</b>
    <%= @song.about %>
  </p>
  <p>
    <b>Lyrics:</b>
    <%= @song.lyrics %>
  </p>
</div>

<div class = "song_options">
  <% if can? :manage, @song %>
    <%= link_to 'Edit', edit_song_path(@song) %> 
    <%= link_to 'Destroy', @song, method: :delete, data: { confirm: 'Are you sure?' } %>
  <%end%>
  <%= link_to 'Back', songs_path %>
</div> 

<div>
<% @song.comments.each do |comment| %>
<%= comment.updated_at%><br>
<%= comment.user.artist_name%><br>
<%= comment.comment %><br>
<% if can? :manage, comment %>
<%= link_to 'Delete Comment', [@song, comment], method: :delete, data: { confirm: 'Are you sure?' } %>
<%end%>
<%end%>
</div>


<%= render 'form_comment' %> 
